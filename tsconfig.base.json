{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@web/*": ["apps/web/src/*"],
      "@core/*": ["packages/core/*"],
      "@db": ["packages/db/generated/prisma/index"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
